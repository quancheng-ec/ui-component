{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "standard",
    "vue"
  ],
  "plugins": [
    "html"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "arrow-parens": [
      2,
      "as-needed"
    ],
    "no-new": [
      "warn"
    ]
  }
}
